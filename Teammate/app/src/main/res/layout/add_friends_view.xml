<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="@drawable/frame_square"
    android:layout_margin="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5dp">

            <TextView
                android:id="@+id/txtBTUserAF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="BT USER"
                android:textAlignment="textStart"
                android:textColor="#E6EB57"
                android:textSize="25dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txtBTAddressAF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="ADDRESS"
                android:textAlignment="textStart"
                android:textColor="#E6EB57"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="10dp">


            <ImageButton
                android:id="@+id/btnPairAF"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/pair"
                android:background="@color/fui_transparent"/>

            <TextView
                android:id="@+id/txtPairAF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pair"
                android:textColor="#E6EB57"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="5dp">


            <ImageButton
                android:id="@+id/btnAddFriendAF"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/plus"
                android:background="@color/fui_transparent"
                android:layout_gravity="end"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Friend"
                android:textColor="#E6EB57"
                android:layout_gravity="end"/>


        </LinearLayout>


    </LinearLayout>



</LinearLayout>