<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#090936"
    tools:context=".Main2Activity">

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:id="@+id/layoutLogoM2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerInParent="true"
                android:src="@drawable/logo_notext" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/layoutButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layoutLogoM2"
            android:layout_marginTop="50dp"
            >

            <Button
                android:id="@+id/btnLoginM"
                android:layout_width="250dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_round"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="30dp"
                android:layout_centerHorizontal="true"
                android:textSize="20dp"
                android:text="Login"

                />


            <Button
                android:id="@+id/btnRegisterM"
                android:layout_width="250dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_round"
                android:textColor="#FFFFFF"
                android:layout_below="@+id/btnLoginM"
                android:layout_centerHorizontal="true"
                android:textSize="20dp"
                android:text="Register">

            </Button>

        </RelativeLayout>




    </RelativeLayout>

</RelativeLayout>